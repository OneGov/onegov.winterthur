<div metal:use-macro="layout.base" i18n:domain="onegov.winterthur">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <dl>
            <dt i18n:translate>Start:</dt>
            <dd>
                ${layout.format_date(model["DauerVon"], 'weekday_long')},
                ${layout.format_date(model["DauerVon"], 'date_long')}
            </dd>

            <dt i18n:translate>End:</dt>
            <dd>
                ${layout.format_date(model["DauerBis"], 'weekday_long')},
                ${layout.format_date(model["DauerBis"], 'date_long')}
            </dd>

            <dt i18n:translate>Responsible official:</dt>
            <dd>
                <dl>
                    <dt i18n:translate>Construction Site:</dt>
                    <dd>
                        <ul>
                            <li tal:condition='model["SachbearbeiterBau"]'>
                                ${model["SachbearbeiterBau"]}
                            </li>
                            <li tal:condition='model["SachbearbeiterBauZusatz"]'>
                                ${model["SachbearbeiterBauZusatz"]}
                            </li>
                        </ul>
                    </dd>

                    <dt i18n:translate>Traffic:</dt>
                    <dd>
                        <ul>
                            <li tal:condition='model["SachbearbeiterVerkehr"]'>
                                ${model["SachbearbeiterVerkehr"]}
                            </li>
                            <li tal:condition='model["SachbearbeiterVerkehrZusatz"]'>
                                ${model["SachbearbeiterVerkehrZusatz"]}
                            </li>
                        </ul>
                    </dd>
                </dl>
            </dd>

            <dt i18n:translate>Provisions / Restrictions:</dt>
            <dd>
                ${model["Massnahmen"] or ''}
            </dd>
        </dl>

        <p>
            <a href="${back}" i18n:translate>Back</a>
        </p>
    </tal:b>
</div>
