<div metal:use-macro="layout.base" i18n:domain="onegov.winterthur">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <dl class="limit-line-width">
            <dt i18n:translate>Date</dt>
            <dd>${model.date.strftime('%d.%m.%Y')}</dd>

            <dt i18n:translate>Alarm</dt>
            <dd>${model.date.strftime('%H:%M')}</dd>

            <dt i18n:translate>Location</dt>
            <dd>${model.location}</dd>

            <dt i18n:translate>Mission nature</dt>
            <dd>${model.nature}</dd>

            <dt i18n:translate>Mission duration</dt>
            <dd>${model.readable_duration}</dd>

            <dt i18n:translate>Mission personnel</dt>
            <dd>${model.personnel}</dd>

            <dt i18n:translate>Backup personnel</dt>
            <dd>${model.backup}</dd>

            <dt i18n:translate>Civil Defence involvement</dt>
            <dd>
                <tal:b condition="model.civil_defence" i18n:translate>
                    Yes
                </tal:b>

                <tal:b condition="not:model.civil_defence" i18n:translate>
                    No
                </tal:b>
            </dd>

            <dt i18n:translate>Vehicles</dt>
            <dd tal:define="used_vehicles model.used_vehicles">

                <tal:b condition="not:used_vehicles" i18n:translate>
                    None
                </tal:b>

                <tal:b condition="used_vehicles" metal:use-macro="layout.macros.used_vehicles" />
            </dd>
        </dl>
    </tal:b>
</div>
