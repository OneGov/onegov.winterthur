<div metal:use-macro="layout.base" i18n:domain="onegov.winterthur">
    <tal:b metal:fill-slot="title">
        ${title}
    </tal:b>
    <tal:b metal:fill-slot="content">
        <div class="daycare-calculator-result" tal:condition="calculation">

            <dl class="summary">
                <div class="plain">
                    <dt i18n:translate>Your monthly costs</dt>
                    <dd>${calculation.parent_share_per_month.amount} CHF</dd>
                </div>

                <div class="${calculation.city_share_per_month and 'success' or 'warning'}">
                    <dt i18n:translate>Our monthly contribution</dt>
                    <dd>${calculation.city_share_per_month.amount} CHF</dd>
                </div>
            </dl>

            <tal:b repeat="block calculation.blocks">
                <h2>${block.title}</h2>

                <table>
                    <thead class="show-for-sr">
                        <tr>
                            <td i18n:translate>Note</td>
                            <td i18n:translate>Title</td>
                            <td i18n:translate>Operation</td>
                            <td i18n:translate>Amount</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr tal:repeat="result block.results" class="${result.important and 'important-result'}">
                            <td>${result.note}</td>
                            <td>${result.title}</td>
                            <td>${result.operation}</td>
                            <td>${result.amount} ${result.currency}</td>
                        </tr>
                    </tbody>
                </table>
            </tal:b>
        </div>
        <div class="daycare-calculator">
            <div metal:use-macro="layout.macros['form']" />
        </div>
    </tal:b>
</div>